<h2>Editer l'article</h2>

<%= form_for @draft, url: edit_article_path do |f| %>
<% if @draft.errors.full_messages.first %>
  <div class="alert alert-warning">
    <% @draft.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>
  <div class="form-group">
    <%= f.label :title, 'Titre' %>
    <%= f.text_field :title, {:class => 'form-control'} %>
  </div>
  <%= f.hidden_field :slug %>
  <div class="form-group">
    <%= f.label :content, 'Contenu' %>
    <%= f.text_area :content, {:class => 'form-control'} %>
  </div>
  <% if user_current.role == 'admin' %>
    <div class="form-group">
      <%= f.label :published, 'En ligne ?' %>
      <%= f.check_box :published %>
      <span class="checkmark"></span>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit 'Editer', {:class => 'btn btn-success'} %>
  </div>
<% end %>
