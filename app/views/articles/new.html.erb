<h2>Ajouter un brouillon</h2>

<%= form_for @draft, url: new_article_path do |f| %>
  <% if @draft.errors.full_messages.first %>
    <div class="alert alert-warning">
      <% @draft.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, 'Titre' %>
    <%= f.text_field :title, {:class => 'form-control', :value => 'Brouillon'} %>
  </div>
  <div class="form-group">
    <%= f.label :content, 'Contenu' %>
    <%= f.text_area :content, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.submit 'Envoyer', {:class => 'btn btn-success'} %>
  </div>
<% end %>
