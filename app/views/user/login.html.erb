<h2>Se connecter</h2>

<%= form_for login_user_path do |f| %>
  <div class="form-group">
    <%= f.label :username, "Nom d'utilisateur" %>
    <%= f.text_field :username, :class => 'form-control', :name => 'username' %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Mot de passe" %>
    <%= f.password_field :password, :class => 'form-control', :name => 'password' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Se connecter', :class => 'btn btn-success' %>
  </div>
<% end %>
